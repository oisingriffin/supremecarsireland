@page
@model ModernApp.Pages.Pages_car1design
@{
    ViewData["Title"] = "Volkswagen Passet Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
    <!-- Add other necessary meta tags and links here -->
</head>
<body>
    <!-- Header -->
    <header>
        <div class="container">
            <h1>@ViewData["Title"]</h1>
        </div>
    </header>

    <!-- Main Content -->
    <main>
        <section class="car-details">
            <div class="container">
                <div class="car-image">
                    <img src="~/images/car1.png" alt="Volkswagen Passet">
                </div>
                <div class="car-info">
                    <h2>Volkswagen Passet</h2>
                    <p><strong>Price:</strong> $20,000</p>
                    <p><strong>Year:</strong> 2020</p>
                    <p><strong>Mileage:</strong> 30,000 km</p>
                    <p><strong>Description:</strong> A sleek and modern Volkswagen Passet with a stylish design and high performance. Comes with full service history and a comprehensive warranty.</p>
                </div>
            </div>
        </section>

        <!-- Inquiry Form -->
        <section class="inquiry-form">
            <div class="container">
                <h2>Inquire About This Car</h2>
                <form method="post">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Message:</label>
                        <textarea id="message" name="message" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-submit">Send Inquiry</button>
                </form>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer>
        <div class="container footer-content">
            <p>&copy; 2024 Supreme Cars. All rights reserved.</p>
            <ul class="social-media">
                <li><a href="https://www.facebook.com/Supremecarsireland" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a></li>
                <li><a href="https://www.twitter.com/Supremecarsireland" aria-label="Twitter"><i class="fab fa-twitter"></i></a></li>
                <li><a href="https://www.instagram.com/supremecarsireland" aria-label="Instagram"><i class="fab fa-instagram"></i></a></li>
            </ul>
        </div>
    </footer>
</body>
</html>
